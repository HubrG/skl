<div class="sticky top-0 z-100" class="z-index:9999999" style="z-index:9000">
	<nav class="z-index:9999999">
		<div class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto text-center z-100">
			<a href="{{ path("app_home")}}" target="_self" class="flex items-center  md:order-1 ">
				<span class="logo self-center text-3xl  whitespace-nowrap dark:text-white">
					Scr<span class="relative">
						<i class="fa-duotone fa-semicolon"></i>
					</span>lab
				</span>
			</a>
