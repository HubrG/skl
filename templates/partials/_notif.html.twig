{% for message in app.session.flashBag.get('success') %}
	<div id="flashbag-success" class="absolute -right-48 -top-96 flex flex-col gap-x-2 items-center" data-count="1" data-status="success">
		<i class="fa-light fa-circle-check"></i>
		<span>{{ message|raw }}</span>
	</div>
{% endfor %}
{% for message in app.session.flashBag.get('info') %}
	<div id="flashbag-success" class="absolute -right-48 -top-96 flex flex-col gap-x-2 items-center" data-count="1" data-status="info">
		<i class="fa-light fa-circle-check"></i>
		<span>{{ message|raw }}</span>
	</div>
{% endfor %}
{% for message in app.session.flashBag.get('error') %}
	<div id="flashbag-success" class="absolute -right-48 -top-96 flex flex-row gap-x-2 items-center" data-count="1" data-status="error">
		{{ message|raw }}
	</div>
{% endfor %}
