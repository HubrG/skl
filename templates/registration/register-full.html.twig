{% extends 'base.html.twig' %}

{% block title %}Créer un compte sur Scrilab
{% endblock %}
{% block metatags %}
	<meta name="turbo-visit-control" content="reload">
	<meta name="description" content="Créer un compte sur Scrilab">

{% endblock %}
{% block body %}
	<section class="col-span-12 w-full md:col-start-4 mx-auto">
		<div class="modal__container sm:h-auto sm:w-auto  shadow-xl w-screen items-center flex md:flex-none  justify-center" role="dialog" aria-modal="true" aria-labelledby="popup-register-title">
			<div class="px-6 lg:px-8 relative">
				<h3 class="modal-header">
					<i class="fa-duotone fa-user-plus ml-5"></i>
					<span>Rejoindre Scrilab</span>
				</h3>
				<hr class="mb-0">
				<p class="w-full text-center my-5">
					<a href="{{path("app_login")}}" class="modal-register-login-button w-full">
						<i class="fa-duotone fa-chevrons-left"></i>&nbsp;&nbsp;&nbsp;J'ai déjà un compte Scrilab
					</a>
				</p>
				<hr class="mb-5">

				<div class="text-left">
					<turbo-frame id="register-full-frame">

						{{ form_start(registrationFormFull, {attr: {'novalidate': 'novalidate','action':path("app_register_full")}}) }}
						{% include "./partials/_form-row.html.twig" with {'form': registrationFormFull.username, 'icon':"fa-user-vneck"} %}
						{% include "./partials/_form-row.html.twig" with {'form': registrationFormFull.email, 'icon':"fa-envelope"} %}
						{% include "./partials/_form-row.html.twig" with {'form': registrationFormFull.plainPassword, 'icon':"fa-lock-keyhole"} %}
						{% include "./partials/_form-row.html.twig" with {'form': registrationFormFull.agreeTerms, 'icon':"", check:true, checkText:"J'accepte les <button onclick='MicroModal.show(\"popup-cgu\")' type='button' class='hover:underline font-bold'>CGU</button> de Scrilab", class:"text-xs"} %}
						<button type="submit" class="button-classic w-full flex justify-center button-slate mt-5">

							<i class="fa-duotone fa-user-plus"></i>
							C'est parti !

						</button>
						{{ form_end(registrationFormFull) }}</div>
				</turbo-frame>
			</div>
		</div>

	{% endblock %}
