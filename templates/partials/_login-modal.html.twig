{% if app.user is null %}
	{# Login Modal #}
	<dialog id="authentication-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 rounded-lg right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 md:h-full">
		<div
			class="relative w-full h-full max-w-md md:h-auto  rounded-lg shadow">
			<!-- Modal content -->
			<div class="relative bg-white shadow-lg dark:bg-gray-800 rounded-lg">
				<button tabindex="5" type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white" data-modal-hide="authentication-modal">
					<svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
					</svg>
					<span class="sr-only">Close modal</span>
				</button>
				<div class="px-6 py-6 lg:px-8">
					<h3 class="text-xl font-medium text-gray-900 dark:text-white">
						Connectez-vous sur Scrilab
						<span class="material-symbols-outlined">
							login
						</span>
					</h3>
					<hr class="mt-5 mb-3">
					<button tabindex="0" data-modal-show="register-modal" data-modal-hide="authentication-modal" class="text-center w-full mb-3 text-sm text-blue-700 font-medium hover:underline">Vous n'avez pas de compte ? Inscrivez-vous !</button>
					<hr class="mb-5">
					<turbo-frame id="loginframe">
						<form method="post" action="{{ path("app_login") }}">
							{% if error is defined %}
								{% if error %}
									<div class="flex justify-center items-center font-bold mt-10">
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									</div>
								{% endif %}
							{% endif %}
							<div>
								<label tabindex="1" for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Votre adresse email</label>
								<div class="relative mb-6">
									<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none mb-1">
										<span class="material-symbols-outlined">
											mail
										</span>
									</div>
									<input type="email" value="{% if last_username is defined %}{{ last_username }}{% endif %}" name="email" id="inputEmail" autocomplete="email" autofocus>
								</div>
							</div>
							<div>
								<label tabindex="3" for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Votre mot de passe
									<button tabindex="4" type="button" data-modal-show="reset-modal" data-modal-hide="authentication-modal" data-modal-target="reset-modal" class="text-sm font-medium text-blue-600  dark:text-blue-800 float-right">
										<span class="material-symbols-outlined">
											lock_reset
										</span>
										<span class="hover:underline">Oubli√© ?</span>
									</button>
								</label>
								<div class="relative mb-6">
									<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none mb-1">
										<span class="material-symbols-outlined">
											lock
										</span>
									</div>
									<input type="password" name="password" id="inputPassword" autocomplete="current-password">
								</div>
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<div class="flex justify-between ">
								<div class="flex items-start">
									<div class="flex items-center h-5">
										<input type="checkbox" id="remember" name="_remember_me">
									</div>
									<label for="remember" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Se souvenir de moi</label>
								</div>
							</div>

							<button data-modal-show="authentication-modal" type="submit" class="button-classic w-full flex justify-center button-sky mt-5">
								<span class="material-symbols-outlined">
									login
								</span>
								Connexion</button>

						</turbo-frame>
					</form>
				</div>
			</div>
		</div>
	</dialog>
	{% include "partials/_reset_password-modal.html.twig" %}

{% endif %}
