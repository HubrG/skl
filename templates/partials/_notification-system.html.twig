{# Nouveau commentaire sur l'une de vos publications #}
{% if item.type == 1 %}
	<span class="material-symbols-outlined">
		mark_unread_chat_alt
	</span>
	<span>
		<a href="{{path("app_user", {username:item.fromUser.username})}}" class="text-sky-700 hover:underline font-medium">{{item.fromUser.nickname}}</a>
		vient de rédiger un commentaire sur votre publication
		<a href="{{path("app_publication_show_one", {id:item.comment.publication.id, slug:item.comment.publication.slug})}}" class="text-sky-700 hover:underline font-medium">{{item.comment.publication.title}}</a>
		{# <p class="italic">{{item.comment.content|slice(0,100)}}{{item.comment.content|length > 100 ? "..."}}</p> #}
		<p class="text-slate-400 text-xs">il y a
			{{item.createdAt|since}}
		</p>
	</span>
{% endif %}
{# Nouveau commentaire sur l'un de vos chapitres #}
{% if item.type == 2 %}
	<span class="material-symbols-outlined">
		mark_chat_unread
	</span>
	<span>
		<a href="{{path("app_user", {username:item.fromUser.username})}}" class="text-sky-700 hover:underline font-medium">{{item.fromUser.nickname}}</a>
		vient de rédiger un commentaire sur la feuille
		<a href="{{path("app_chapter_show", {slugPub:item.comment.publication.slug,user:item.user.username,idChap:item.comment.chapter.id,slug:item.comment.chapter.slug})}}" class="text-sky-700 hover:underline font-medium">{{item.comment.chapter.title}}</a>
		de votre récit
		<a href="{{path("app_publication_show_one", {id:item.comment.publication.id, slug:item.comment.publication.slug})}}" class="text-sky-700 hover:underline font-medium">{{item.comment.publication.title}}</a>
		{# <p class="italic">{{item.comment.content|slice(0,100)}}{{item.comment.content|length > 100 ? "..."}}</p> #}
		<p class="text-slate-400 text-xs">il y a
			{{item.createdAt|since}}
		</p>
	</span>
{% endif %}
{# Nouveau like sur l'un de vos commentaires #}
{% if item.type == 3 %}
	<span class="material-symbols-outlined">
		favorite
	</span>
	<span>
		<a href="{{path("app_user", {username:item.fromUser.username})}}" class="text-sky-700 hover:underline font-medium">{{item.fromUser.nickname}}</a>
		vient d'aimer votre commentaire
		{# la publication #}
		{% if item.likeComment.comment.chapter %}
			sur la feuille
			<a href="{{path("app_chapter_show", {slugPub:item.likeComment.comment.chapter.slug,user:item.user.username,idChap:item.likeComment.comment.chapter.id,slug:item.likeComment.comment.chapter.slug})}}" class="text-sky-700 hover:underline font-medium">{{item.likeComment.comment.chapter.title}}</a>
			du récit
			<a href="{{path("app_publication_show_one", {id:item.likeComment.comment.publication.id, slug:item.likeComment.comment.publication.slug})}}" class="text-sky-700 hover:underline font-medium">{{item.likeComment.comment.publication.title}}</a>
		{% else %}
			sur le récit
			<a href="{{path("app_publication_show_one", {id:item.likeComment.comment.publication.id, slug:item.likeComment.comment.publication.slug})}}" class="text-sky-700 hover:underline font-medium">{{item.likeComment.comment.publication.title}}</a>
		{% endif %}
		{# <p class="italic">{{item.likeComment.comment.content|slice(0,100)}}{{item.likeComment.comment.content|length > 100 ? "..."}}</p> #}
		<p class="text-slate-400 text-xs">il y a
			{{item.createdAt|since}}
		</p>
	</span>
{% endif %}
