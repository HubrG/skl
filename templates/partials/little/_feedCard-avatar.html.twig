{% if pic %}
	{% set itemCover = pic|replace({'h_800,w_800': 'h_50,w_50,c_fill'}) %}
{% endif %}
{% if type is defined %}
	<div class=" self-baseline w-7 h-7 relative flex-shrink-0">
		{% if pic %}
			<div class="imageContainer  mr-2 -ml-2">
				<div class="flex animate-pulse items-center z-50 justify-center w-full rounded-full bg-gray-300  dark:bg-gray-700">
					<svg class="w-full h-full object-cover text-gray-200" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" fill="currentColor" viewbox="0 0 640 512"><path d="M480 80C480 35.82 515.8 0 560 0C604.2 0 640 35.82 640 80C640 124.2 604.2 160 560 160C515.8 160 480 124.2 480 80zM0 456.1C0 445.6 2.964 435.3 8.551 426.4L225.3 81.01C231.9 70.42 243.5 64 256 64C268.5 64 280.1 70.42 286.8 81.01L412.7 281.7L460.9 202.7C464.1 196.1 472.2 192 480 192C487.8 192 495 196.1 499.1 202.7L631.1 419.1C636.9 428.6 640 439.7 640 450.9C640 484.6 612.6 512 578.9 512H55.91C25.03 512 .0006 486.1 .0006 456.1L0 456.1z"/></svg>
				</div>
				<img class="w-full h-full object-cover rounded-full lozad myImage" src="/images/dot.png" data-src="{{itemCover}}" alt="Avatar de {{user}}">
			</div>
		{% else %}
			<div class="w-full h-full object-cover rounded-full bg-slate-500  cursor-default">
				<div class=" h-full flex mx-auto items-center justify-center text-xs text-slate-200">
					{{ user|slice(0,1)|upper }}
				</div>
			</div>
		{% endif %}
	</div>
{% else %}
	<div class="mt-0.5 w-5 h-5 relative flex-shrink-0">
		{% if pic %}
			<div class="imageContainer ">
				<div class="flex animate-pulse h-full items-center z-50 justify-center w-full rounded-full bg-gray-300   dark:bg-gray-700">
					<svg class=" text-gray-200" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" fill="currentColor" viewbox="0 0 640 512"><path d="M480 80C480 35.82 515.8 0 560 0C604.2 0 640 35.82 640 80C640 124.2 604.2 160 560 160C515.8 160 480 124.2 480 80zM0 456.1C0 445.6 2.964 435.3 8.551 426.4L225.3 81.01C231.9 70.42 243.5 64 256 64C268.5 64 280.1 70.42 286.8 81.01L412.7 281.7L460.9 202.7C464.1 196.1 472.2 192 480 192C487.8 192 495 196.1 499.1 202.7L631.1 419.1C636.9 428.6 640 439.7 640 450.9C640 484.6 612.6 512 578.9 512H55.91C25.03 512 .0006 486.1 .0006 456.1L0 456.1z"/></svg>
				</div>
				<img class="w-full h-full object-cover rounded-full lozad myImage" src="/images/dot.png" data-src="{{itemCover}}" alt="Avatar de {{user}}">
			</div>
		{% else %}
			<div class="w-full h-full object-cover rounded-full bg-slate-500 cursor-default">
				<div class="w-full h-full flex items-center justify-center text-[0.65rem] text-slate-200">
					{{ user|slice(0,1)|upper }}
				</div>
			</div>
		{% endif %}
	</div>
{% endif %}
