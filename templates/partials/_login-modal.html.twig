{% if app.user is null %}
	{# Login Modal #}
	<div id="popup-login" tabindex="-1" aria-hidden="true" class="modal micromodal-slide  z-50">
		<div
			class="modal__overlay" tabindex="-1" data-micromodal-close class=" max-w-md md:h-auto  rounded-lg shadow ">
			<!-- Modal content -->
			<div class="modal__container  h-screen sm:h-auto sm:w-auto w-screen items-center  flex md:flex-none justify-items-center justify-center" role="dialog" aria-modal="true" aria-labelledby="popup-login-title" style="width:100%">
				<div class="px-6 py-6 lg:px-8 relative" style="width:100%">
					<button tabindex="5" onclick='MicroModal.close("popup-login")' type="button" class="absolute top-0 right-2.5 text-slate-400 bg-transparent hover:bg-gray-200 hover:text-slate-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white" data-micromodal-close>
						<svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
						<span class="sr-only">Close modal</span>
					</button>
					<h3 class="modal-header">
						<i class="fa-duotone fa-right-to-bracket"></i>
						Connexion sur Scrilab
					</h3>
					<hr class="mb-5 mt-5">
					<div class="block">
						<a href="{{path("connect_google")}}" class="opacity-90 rounded  hover:opacity-100 text-white font-bold py-2 px-4 flex flex-row items-center justify-center mx-auto gap-x-4">
							<img src="/images/connexion_google.png" class="h-14" alt="Se connecter avec Google"/>
						</a>
						<div class="hr-space">
							<hr>
							<div>
								Ou avec mon email
							</div>
						</div>
					</div>
					<div class="w-full">
						{{ render(controller('App\\Controller\\SecurityController::login')) }}
						<hr class="mb-0">
						<div class="flex flex-row justify-center items-center gap-x-2 text-s text-sm  text-slate-600 dark:text-slate-200">
							<button tabindex="0" onclick='document.getElementById("popup-login").classList.add("animate__animated","animate__fadeOut","animate__faster");MicroModal.close("popup-login");document.getElementById("popup-login").classList.remove("animate__animated","animate__fadeOut")' data-micromodal-trigger="popup-register" class="modal-register-login-button">
								Je n'ai pas encore de compte Scrilab !
							</button>
							<i class="fa-duotone fa-chevrons-right"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}
