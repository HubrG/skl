{% set nbr = 0 %}
{% for items in infoPub.publicationChapters|sort((a, b) => a.orderDisplay <=> b.orderDisplay) %}
	{% if items.status == withStatus %}
		{% set nbr = nbr + 1 %}
		{% set chapId = items.id  %}
		<div class="relative bg-slate-50   border-slate-200 dark:border-2 border-[1px] rounded-lg shadow dark:shadow-xl dark:bg-slate-800 dark:border-slate-700  mt-5 list-group-item " chap="{{ items.id }}" id="{{ items.orderDisplay }}">
			<span data-chapter-status="{{items.status}}" id="chapter-sort-{{items.id}}" class="absolute {{ items.status < 2 ? " hidden" }} left-[0.0rem] -bottom-[0.02rem] inline-flex items-center justify-center w-5 h-5 text-xs font-semibold text-slate-50 bg-slate-700 dark:bg-slate-900 rounded-lg rounded-tl-none rounded-br-none chapter-number z-0">
				{{items.orderDisplay + 1}}</span>
			<i data-tippy-content="Déplacer cette feuille" class="fa-regular fa-up-down-left-right item text-sm mr-2 mt-2 absolute right-0 top-1 font-bold cursor-grab dark:text-slate-50"></i>
			<div id="defaultTabContent{{ chapId }}">
				<div class=" p-4 pt-3 md:p-8 md:pb-5 md:pt-3 " id="about{{ chapId }}" role="tabpanel" aria-labelledby="about-tab{{ chapId }}">
					<h2 class="mb-3 ml-0 md:-ml-5 flex items-baseline gap-1 text-large font-extrabold tracking-tight text-slate-700 dark:text-white">
						{% if items.status == 2 %}
							<span class="flex w-3 h-3 bg-green-500 rounded-full" id="indicator{{chapId}}"></span>
						{% else %}
							<span class="flex w-3 h-3 bg-gray-500 rounded-full" id="indicator{{chapId}}"></span>
						{% endif %}
						<input type="text" class="h-6 rounded dark:bg-slate-700 border-slate-400 hidden pl-1" id="titleInput{{ chapId }}" value="">
						<span class="hover:bg-slate-100 dark:hover:bg-slate-700 px-1 w-full text-left cursor-text rounded fastChangeTitle" data-title-id="{{ chapId }}" id="title{{ chapId }}">
							{% if items.title  %}
								{{ items.title|capitalize }}
							{% else %}
								Feuille n°{{ items.orderDisplay + 1 }}
							{% endif %}
						</span>
					</h2>
					<p class="mb-5 text-gray-500 text-xs dark:text-gray-400 line-clamp-5">{% set content = items.content %}{{ content|regex_replace('/<p.*?>/i', ' ')|striptags|trim|capitalize }}...</p>
					<div class="absolute bottom-0 right-0 mb-1 mr-3 flex flex-row gap-x-4 items-center">
						<a href="{{ path("app_publication_edit_chapter", { idPub:infoPub.id, idChap:items.id }) }}" target="_top" class="flex flex-row gap-x-2 items-center text-xs font-medium text-slate-600 dark:text-slate-300 mr-2 justify-between dark:hover:text-blue-700">
							<i class="fa-duotone fa-pen-to-square"></i>
							<span class="hover:underline">Éditer</span>
						</a>
						<a href="{{path("app_publication_del_chapter", {idChap:items.id, idPub:infoPub.id})}}" target="_self" class=" gap-x-2 flex flex-row items-center text-red-500 text-xs text-justify dark:text-red-500">
							<i class="fa-duotone fa-trash" data-tippy-content="Supprimer"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
{% endfor %}
