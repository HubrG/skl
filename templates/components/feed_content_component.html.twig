<div
	id="feed-content">
	{# ! Derniers commentaires #}
	{% set title = "Derniers commentaires" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"comment",
		title:title,
		titleColor:"text-yellow-500 dark:text-yellow-200",
		bgCard:"bg-yellow-50 dark:bg-yellow-500 shadow-yellow-500 dark:shadow-yellow-400",
		borderHr:"border-yellow-300 dark:border-yellow-700"
		} 
	%}
	{% for item in this.comments %}
		<li>
			{% if item.chapter %}
				{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
				<span>
					<a href="{{path("app_user", {username:item.user.username})}}" class="text-yellow-500 dark:text-yellow-200">
						{{item.user.nickname}}
					</a>
					a commenté la feuille
					<a href="{{path("app_chapter_show", {slugPub:item.publication.slug,user:item.user.username,idChap:item.chapter.id,slug:item.chapter.slug,idCom:item.id})}}" class="font-semibold">
						{{item.chapter.title|length > 30 ? item.chapter.title|slice(0, 30) ~ "..." : item.chapter.title}}
					</a>
					du récit
					<a href="{{path("app_publication_show_one", {id:item.publication.id, slug:item.publication.slug})}}" class="italic">
						{{item.publication.title|length > 30 ? item.publication.title|slice(0, 30) ~ "..." : item.publication.title}}
					</a>
					<span class="help-text">
						<span class="text-[0.70rem]">
							{{item.publishedAt|since}}
						</span>
					</span>
				</span>
			{% else %}
				{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
				<span>
					<a href="{{path("app_user", {username:item.user.username})}}" class="self-baseline text-yellow-500 dark:text-yellow-200">
						{{item.user.nickname}}
					</a>
					a commenté le récit
					<a href="{{path("app_publication_show_one", {id:item.publication.id, slug:item.publication.slug, idCom:item.id})}}" class="font-semibold">
						{{item.publication.title|length > 30 ? item.publication.title|slice(0, 30) ~ "..." : item.publication.title}}
					</a>
					<span class="help-text inline-flex">
						<span class="text-[0.70rem]">
							{{item.publishedAt|since}}
						</span>
					</span>
				</span>
			{% endif %}
		</li>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Derniers « J'aime »  #}
	{% set title = "Derniers « j'aime »" %}
	{% set color = "rose" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"heart", 
		title:title, 
		titleColor:"text-rose-500 dark:text-rose-900", 
		bgCard:"bg-rose-50 dark:bg-rose-500 shadow-rose-500 dark:shadow-rose-400",
		borderHr:"border-rose-300 dark:border-rose-700"
		} 
	%}
	{% if this.publicationChapterLikes|length == 0 %}
		<li class="mx-auto text-rose-500 dark:text-rose-200">Aucun « j'aime »</li>
	{% endif %}
	{% for item in this.publicationChapterLikes %}
		<li>
			{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
			<span>
				<a href="{{path("app_user", {username:item.user.username})}}" class="self-baseline text-rose-500 dark:text-rose-200">
					{{item.user.nickname}}
				</a>
				vient d'aimer la feuille
				<a href="{{path("app_chapter_show", {slugPub:item.chapter.publication.slug,user:item.user.username,idChap:item.chapter.id,slug:item.chapter.slug})}}" class="font-semibold">
					{{item.chapter.title|length > 30 ? item.chapter.title|slice(0, 30) ~ "..." : item.chapter.title}}
				</a>
				<span class="help-text inline-flex">
					<span class="text-[0.70rem]">
						{{item.createdAt|since}}
					</span>
				</span>
			</span>
		</li>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Derniers sujets du forum #}
	{% set title = "Derniers sujets du forum" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"comments", 
		title:title, 
		titleColor:"text-emerald-500 dark:text-emerald-900", 
		bgCard:"bg-emerald-50 dark:bg-emerald-500",
		borderHr:"border-emerald-300 dark:border-emerald-700"
		} 
	%}
	{% for item in this.forumTopics %}
		<li>
			{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
			<span>
				<a href="{{path("app_user", {username:item.user.username})}}" class="self-baseline text-emerald-500 dark:text-emerald-200">
					{{item.user.nickname}}
				</a>
				vient de créer le sujet
				<a href="{{path("app_forum_topic_read", {slug:item.category.slug,slugTopic:item.slug,id:item.id})}}" class="font-semibold">
					{{item.title|length > 30 ? item.title|slice(0, 30) ~ "..." : item.title}}
				</a>
				<span class="help-text inline-flex">
					<span class="text-[0.70rem]">
						{{item.createdAt|since}}
					</span>
				</span>
			</span>
		</li>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Dernières réponses du forum #}
	{% set title = "Dernières réponses du forum" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"comments-alt", 
		title:title, 
		titleColor:"text-sky-500 dark:text-sky-900", 
		bgCard:"bg-sky-50 dark:bg-sky-500",
		borderHr:"border-sky-300 dark:border-sky-700"
		}
	%}
	{% for item in this.forumMessages %}
		<li>
			{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
			<span>
				<a href="{{path("app_user", {username:item.user.username})}}" class="self-baseline text-sky-500 dark:text-sky-200">
					{{item.user.nickname}}
				</a>
				vient de répondre au sujet
				<a href="{{path("app_forum_topic_read", {slug:item.topic.category.slug,slugTopic:item.topic.slug,id:item.topic.id})}}" class="font-semibold">
					{{item.topic.title|length > 30 ? item.topic.title|slice(0, 30) ~ "..." : item.topic.title}}
				</a>
				<span class="help-text inline-flex">
					<span class="text-[0.70rem]">
						{{item.publishedAt|since}}
					</span>
				</span>
			</span>
		</li>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Derniers récits #}
	{% set title = "Derniers récits" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"books", 
		title:title, 
		titleColor:"text-teal-500 dark:text-teal-900", 
		bgCard:"bg-teal-50 dark:bg-teal-500",
		borderHr:"border-teal-300 dark:border-teal-700"
		} 
	%}
	{% for item in this.publications %}
		<li>
			{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
			<span>
				<a href="{{path("app_user", {username:item.user.username})}}" class="self-baseline text-sky-500 dark:text-sky-200">
					{{item.user.nickname}}
				</a>
				vient de publier le récit
				<a href="{{path("app_publication_show_one", {slug:item.slug,id:item.id})}}" class="font-semibold">
					{{item.title|length > 30 ? item.title|slice(0, 30) ~ "..." : item.title}}
				</a>
				<span class="help-text inline-flex">
					<span class="text-[0.70rem]">
						{{item.created|since}}
					</span>
				</span>
			</span>
		</li>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Dernières feuilles #}
	{% set title = "Dernières feuilles" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"files", 
		title:title, 
		titleColor:"text-indigo-500 dark:text-indigo-900", 
		bgCard:"bg-indigo-50 dark:bg-indigo-500",
		borderHr:"border-indigo-300 dark:border-indigo-700"
		} 
	%}
	{% for item in this.publicationChapters %}
		<li>
			{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
			<span>
				<a href="{{path("app_user", {username:item.user.username})}}" class="self-baseline text-indigo-500 dark:text-indigo-200">
					{{item.user.nickname}}
				</a>
				vient de publier la feuille

				{% set filteredChapters = item.publicationChapters|filter(chapter => chapter.status == 2) %}
				{% set sortedChapters = filteredChapters|sort((a, b) => b.orderDisplay <=> a.orderDisplay) %}
				{% set lastChapter = sortedChapters|first %}

				<a href="{{ path("app_chapter_show", {idChap:lastChapter.id, user:item.user.username, slugPub:item.slug, slug:lastChapter.slug}) }}" class="hover:underline font-semibold">{{lastChapter.title|length > 30 ? lastChapter.title|slice(0, 30) ~ "..." : lastChapter.title }}</a>

				pour son récit
				<a href="{{path("app_publication_show_one", {id:item.id, slug:item.slug})}}" class="italic">
					{{item.title|length > 30 ? item.title|slice(0, 30) ~ "..." : item.title}}
				</a>
				<span class="help-text inline-flex">
					<span class="text-[0.70rem]">
						{{item.created|since}}
					</span>
				</span>
			</span>
		</li>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Derniers marques-pages #}
	{% set title = "Derniers marques-pages" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"bookmark", 
		title:title, 
		titleColor:"text-lime-700 dark:text-lime-900", 
		bgCard:"bg-lime-50 dark:bg-lime-500",
		borderHr:"border-lime-300 dark:border-lime-700"
		} 
	%}
	{% for item in this.publicationBookmarks %}
		<div>
			{% if item.chapter %}
				{{item.chapter.title}}
			{% else %}
				{{item.publication.title}}
			{% endif %}
		</div>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Dernières révisions #}
	{% set title = "Dernières révisions" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"highlighter-line", 
		title:title, 
		titleColor:"text-amber-500 dark:text-amber-900", 
		bgCard:"bg-amber-50 dark:bg-amber-500",
		borderHr:"border-amber-300 dark:border-amber-700"
		} 
	%}
	{% for item in this.publicationAnnotations %}
		<div>
			{{item.chapter.title}}
		</div>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Dernières lectures #}
	{% set title = "Dernières lectures" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"glasses", 
		title:title, 
		titleColor:"text-purple-500 dark:text-purple-900", 
		bgCard:"bg-purple-50 dark:bg-purple-500",
		borderHr:"border-purple-300 dark:border-purple-700"
		} 
	%}
	{% for item in this.publicationReads %}
		<li>
			{% include "/partials/little/_feedCard-avatar.html.twig" with  {user:item.user.nickname,pic:item.user.profilPicture } %}
			<span>
				<a href="{{path("app_user", {username:item.user.username})}}" class="self-baseline text-indigo-500 dark:text-indigo-200">
					{{item.user.nickname}}
				</a>
				vient de lire la feuille

				<a href="{{ path("app_chapter_show", {idChap:item.chapter.id, user:item.chapter.publication.user.username, slugPub:item.chapter.publication.slug, slug:item.chapter.slug}) }}" class="hover:underline font-semibold">{{item.chapter.title|length > 30 ? item.chapter.title|slice(0, 30) ~ "..." : item.chapter.title }}</a>

				du récit
				<a href="{{path("app_publication_show_one", {id:item.chapter.publication.id, slug:item.chapter.publication.slug})}}" class="italic">
					{{item.chapter.publication.title|length > 30 ? item.chapter.publication.title|slice(0, 30) ~ "..." : item.chapter.publication.title}}
				</a>
				<span class="help-text inline-flex">
					<span class="text-[0.70rem]">
						{{item.viewDate|since}}
					</span>
				</span>
			</span>
		</li>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Derniers abonnements #}
	{% set title = "Derniers abonnements" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"feed", 
		title:title, 
		titleColor:"text-green-500 dark:text-green-900", 
		bgCard:"bg-green-50 dark:bg-green-500",
		borderHr:"border-green-300 dark:border-green-700"
		} 
	%}
	{% for item in this.publicationFollows %}
		<div>
			{{item.publication.title}}
		</div>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Publications populaires #}
	{% set title = "Publications populaires" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"fire", 
		title:title, 
		titleColor:"text-red-500 dark:text-red-900", 
		bgCard:"bg-red-50 dark:bg-red-500",
		borderHr:"border-red-300 dark:border-red-700"
		} 
	%}
	{% for item in this.publicationPopularities %}
		<div>
			{{item.publication.title}}
		</div>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}


	{# ! Derniers inscrits #}
	{% set title = "Derniers inscrits" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"users", 
		title:title, 
		titleColor:"text-orange-500 dark:text-orange-900", 
		bgCard:"bg-orange-50 dark:bg-orange-500",
		borderHr:"border-orange-300 dark:border-orange-700"
		} 
	%}
	{% for item in this.users %}
		<div>
			{{item.nickname}}
		</div>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}

	{# ! Derniers téléchargements #}
	{% set title = "Derniers téléchargements" %}
	{% include "/partials/little/_feedCard-top.html.twig" with 
		{
		icon:"download", 
		title:title, 
		titleColor:"text-slate-500 dark:text-slate-900", 
		bgCard:"bg-slate-50 dark:bg-slate-500 dark:bg-opacity-50",
		borderHr:"border-slate-300 dark:border-slate-700"
		} 
	%}
	{% for item in this.publicationDownloads %}
		<div>
			{{item.publication.title}}
		</div>
	{% endfor %}
	{% include "/partials/little/_feedCard-bottom.html.twig" %}

</div>
