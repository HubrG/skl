<span class="mt-0.5">
	{% if pic %}
		<img class="min-w-[1.35rem] h-5 rounded-full" src="{{ pic }}" alt="avatar">
	{% else %}
		<div class="w-5 h-5 rounded-full bg-slate-500">
			<div class="w-full h-full flex items-center justify-center text-[0.65rem] text-slate-200">
				{{ user|slice(0,1)|upper }}
			</div>
		</div>
	{% endif %}
</span>
