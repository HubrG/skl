{% extends 'base.html.twig' %}

{% block title %}
	Édition |
	{{ infoPub.title|capitalize }}
	-
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="col-span-12 col-start-0 -mt-10 mb-10 ">
		<nav class="flex py-3  justify-center  shadow-none border-slate-200 border-l-[1px] border-l-slate-100 border-r-[1px] border-r-slate-100 dark:border-r-0 dark:border-l-0 dark:border-none dark:bg-slate-800 mb-10 bg-slate-50" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 md:space-x-3">
				<li class="inline-flex items-center">
					<a href="{{path("app_user_show_publications")}}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
						Mes récits</a>
				</li>
				<li aria-current="page">
					<div class="flex items-center">
						<svg aria-hidden="true" class="w-6 h-6 text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
						</svg>
						<span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Édition d'un récit |
							<span class=" cursor-pointer" data-modal-target="popup-modal" data-modal-toggle="popup-modal">
								{% if (infoPub.status > 1) %}
									<span id="badgePubStatus" class="badge">Publié</span>
								{% else %}
									<span id="badgePubStatus" class="badge">Dépublié</span>
								{% endif %}
							</span>
						</span>
					</div>
				</li>
			</ol>
		</nav>
	</div>
	<div class=" col-span-11 col-start-2 row-span-1 " id="showTitle">
		<h1 class=" -mt-10 mb-10 text-center -ml-10 relative">
			<span id="pubTitle" class="text-4xl font-serif">
				{{ infoPub.title|capitalize }}
			</span>
		</h1>
	</div>
	<aside class="relative col-span-7 col-start-4 pr-10 mb-14 lg:col-span-3 lg:mt-8">
		{% if infoPub.cover == "" %}
			<div id="hideNoCover" data-tippy-content="Cliquez ici pour ajouter une photo de couverture" class="shadow-md p-10 text-2xl flex h-80 bg-white rounded-md dark:bg-slate-900  text-slate-500 hover:text-slate-900  dark:text-slate-400 dark:hover:text-slate-200" for="publication_cover">
				<label for="publication_cover" class="cursor-pointer justify-center h-80">
					<h2 class="m-auto text-center font-light shadow-slate-300  dark:shadow-slate-900 mt-10 rounded-lg">
						<span class="material-symbols-outlined">
							add_photo_alternate
						</span><br/><br/>Ajouter une couverture
					</h2>
				</label>
			</div>
			<div role="status" id="spinCover" class="hidden absolute -translate-x-1/2 -translate-y-1/2 top-2/4 left-1/2">
				<svg aria-hidden="true" class="w-8 h-8 mr-2 text-gray-200 animate-spin dark:text-gray-600 fill-blue-600" viewbox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/><path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/></svg>
				<span class="sr-only">Loading...</span>
			</div>
			<label for="publication_cover" id="showNewCover" class="cursor-pointer hidden"><img id="cover" src="" class="shadow-md shadow-slate-300 dark:shadow-slate-900 rounded-lg"/></label>
		{% else %}
			<label for="publication_cover" class="cursor-pointer">
				<div role="status" id="spinCover" class="hidden absolute -translate-x-1/2 -translate-y-1/2 top-2/4 left-1/2">
					<svg aria-hidden="true" class="w-8 h-8 mr-2 text-gray-200 animate-spin dark:text-gray-600 fill-blue-600" viewbox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/><path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/></svg>
					<span class="sr-only">Loading...</span>
				</div>
				<img data-tippy-content="Cliquez ici pour modifier votre photo de couverture" id="cover" class="shadow-md shadow-slate-300 dark:shadow-slate-900 rounded-lg" src="{{infoPub.cover}}"/></label>
		{% endif %}
	</aside>
	<section class="col-span-12 -col-start-0 lg:col-span-6 -mt-10">
		<div class="mb-4  dark:border-gray-700  dark:bg-slate-800 pt-5  pb-[3px]z-40">
			<ul class="flex justify-center -mb-px text-sm font-medium text-center" id="myTab" data-tabs-toggle="#myTabContent" role="tablist">
				<li class="mr-2 text-xs lg:text-sm" role="presentation">
					<button class="inline-block p-4 border-b-4  dark:bg-slate-800  text-slate-500 hover:text-slate-900 focus:text-slate-900  rounded-t-lg" id="profile-tab" data-tabs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">
						<span class="material-symbols-outlined">
							info
						</span>
						Informations</button>
				</li>
				<li class="mr-2 text-xs lg:text-sm" role="presentation">
					<button class="inline-block p-4 border-b-4  dark:bg-slate-800 text-slate-500 hover:text-slate-900  focus:text-slate-900  rounded-t-lg" id="dashboard-tab" data-tabs-target="#dashboard" type="button" role="tab" aria-controls="dashboard" aria-selected="true">
						<span class="material-symbols-outlined">
							auto_stories
						</span>
						Feuilles</button>
				</li>
				<li class="mr-2 text-xs lg:text-sm" role="presentation">
					<button class="inline-block p-4 border-b-4  dark:bg-slate-800 text-slate-500 hover:text-slate-900 focus:text-slate-900  rounded-t-lg" id="statistiques-tab" data-tabs-target="#statistiques" type="button" role="tab" aria-controls="statistiques" aria-selected="false">
						<span class="material-symbols-outlined">
							monitoring
						</span>
						Statistiques</button>
				</li>
			</ul>
		</div>
		<div id="myTabContent">
			<div class="hidden p-4 rounded-lg  dark:bg-gray-800" id="profile" role="tabpanel" aria-labelledby="profile-tab">
				{{ form_start(formPub) }}
				{{ form_widget(formPub.cover, {attr:{"class":"axiosPublication hidden axiosPubAS axiosPubSpy"}})}}
				<input type="hidden" value="{{ infoPub.id }}" id="hideId"/>
				{{ form_label(formPub.title) }}
				<div class="relative mb-6">
					<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none mb-1">
						<span class="material-symbols-outlined">
							package
						</span>
					</div>
					{{ form_widget(formPub.title, {attr:{"class":"axiosPublication axiosPubAS axiosPubSpy", "onkeydown":"if(this.value == '' && event.keyCode==32) return false;", "onkeyup":"if(this.value.charAt(0) == ' ') { this.value = this.value.trim() } if (!this.value) { document.getElementById('pubTitle').innerHTML='Récit sans titre' } else { document.getElementById('pubTitle').innerHTML=this.value.charAt(0).toUpperCase() + this.value.substring(1).toLowerCase()}"}}) }}
				</div>
				{{ form_label(formPub.summary) }}
				<div class="relative mb-6">
					{{ form_widget(formPub.summary, {attr:{"class":"axiosPublication axiosPubAS axiosPubSpy h-44"}}) }}
				</div>
				{{ form_label(formPub.category) }}
				<div class="relative mb-6" id="publication_category_div">
					<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none mb-1">
						<span class="material-symbols-outlined">
							category
						</span>
					</div>
					{{ form_widget(formPub.category, {attr:{"class":"axiosPublication axiosPubAS axiosPubSpy"}}) }}
				</div>
				<label>En quelques mots, quelles sont les grandes thématiques de votre récit ?</label>
				<div class="relative mb-6">
					<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none mb-1">
						<span class="material-symbols-outlined">
							sell
						</span>
					</div>
					<input type="text" value="" id="keyValue"/>
				</div>
				<div class="hidden" id="editPage"></div>
				<turbo-frame id="keyroute">
					<div id="keyList" class="items-center">
						{% for k in infoPub.publicationKeywords %}
							<div id="keyw_{{ k.keyword|upper }}">{{ k.keyword }}
								&nbsp;<a href="{{path("app_publication_del_keyword", {value:k.keyword, pub:infoPub.id, mode:"edit"})}}">
									<span class="material-symbols-outlined hover:text-red-200">
										backspace
									</span>
								</a>
							</div>
						{% endfor %}
					</div>
				</turbo-frame>
				<hr class=" -mt-5">
				<label class="relative inline-flex items-center cursor-pointer">
					{{ form_widget(formPub.mature, {attr:{"class":"sr-only peer axiosPublication axiosPubAS axiosPubSpy"}}) }}
					<div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
					<span class="ml-3 -mt-6 text-sm font-medium text-slate-900 dark:text-slate-300">Votre récit contient-il du contenu pour adulte ?</span>
				</label>
				{{ form_end(formPub) }}
			</div>
			<div class="hidden p-4 rounded-lg" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
				{% if infoPub.publicationChapters|length > 0 %}
					<ul>
						<li class="text-center">
							<a href="{{path('app_publication_edit_chapter', {'idPub' : infoPub.id})}}" class="block w-full button-classic  button-slate" target="_top">
								<span class="material-symbols-outlined">
									add_notes
								</span>
								&nbsp;&nbsp;Ajouter une nouvelle feuille
							</a>
						</li>
					</ul>
				{% endif %}
				<div id="accordion-flush" data-accordion="open" data-active-classes="text-gray-900 dark:text-white" class="list-group" data-inactive-classes="text-gray-500 dark:text-gray-400">
					<h2 id="accordion-flush-heading-1" class="border-b-[1px] border-b-slate-200 shadow  px-5  rounded mt-5 dark:border-b-slate-900  dark:bg-transparent dark:shadow-lg ">
						<button type="button" class="flex items-center justify-between w-full py-5 font-medium text-left  dark:border-gray-700 dark:text-gray-400" data-accordion-target="#accordion-flush-body-1" aria-expanded="true" aria-controls="accordion-flush-body-1">
							<span class="opacity-80">
								<span class="material-symbols-outlined">
									visibility
								</span>
								Feuilles publiées
							</span>
							<svg data-accordion-icon class="w-6 h-6 rotate-180 shrink-0" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
							</svg>
						</button>
					</h2>
					<div id="accordion-flush-body-1" class="hidden" aria-labelledby="accordion-flush-heading-1">
						<div id="itemsChap" class=" flex-col grid-cols-1 md:grid-cols-2 grid justify-center gap-x-5">
							{% if infoPub.publicationChapters|length == 0 %}
								<div class="w-full text-center bg-slate-100 dark:bg-slate-900 items-center justify-center justify-items-center flex-cols dark:text-slate-100 text-slate-600 rounded border-2 border-slate-300 dark:border-slate-500 border-dashed mt-3 opacity-80 hover:opacity-100" id="noPublication">
									<p class="w-full h-full px-5 pt-5 grid-rows-1 grid-cols-1 grid pb-5 items-center justify-items-center place-items-center font-medium leading-5">
										<a class="  px-5 pt-5 grid-rows-2 grid-cols-1 grid pb-5 items-center justify-items-center place-items-center font-medium leading-5" href="{{path('app_publication_edit_chapter', {'idPub' : infoPub.id})}}#first" target="_top">
											<span class="text-slate-900 dark:text-slate-100 text-base items-end">
												Cliquez ici pour éditer votre première feuille
											</span>
											<span class="text-4xl">
												<span class="material-symbols-outlined">
													add_notes
												</span>
											</span>
										</a>
									</p>
								</div>
								<div class="mt-5 flex-row space-y-2 items-baseline   text-slate-700 dark:text-slate-300">
									<p class="text-xs flex font-normal gap-x-2 items-start">
										<span class="material-symbols-outlined text-yellow-400 dark:text-amber-400">
											tips_and_updates
										</span>
										<span>
											<span class="font-medium text-xs">
												Vous avez la possibilité de créer un nombre illimité de feuilles et de les organiser selon vos préférences.
											</span>
										</span>
									</p>
									<p class="text-xs flex font-normal gap-x-2 opacity-70">
										<span class="material-symbols-outlined">
											receipt_long
										</span>
										<span>
											<span class="text-[0.8rem]">Chaque feuille peut être considérée comme une simple page de texte, une copie intégrale d'un document PDF (tel qu'un récit entier) ou comme un épisode, un chapitre de votre récit.
											</span>
										</span>
									</p>
									<p class="text-xs  font-normal flex gap-x-2  opacity-70">
										<span class="material-symbols-outlined">
											numbers
										</span>
										<span>
											<span class="text-[0.8rem]">
												L'ordre par lequel vous les organisez déterminera l'ordre dans lequel vos lecteurs les liront.
											</span>
										</span>
									</p>
								</div>
							{% elseif infoPub.publicationChapters|length > 0 and infoPub.publicationChapters|length < 2 %}
								{% set var = true %}
								{% for item in infoPub.publicationChapters %}
									{% if item.status > 1 %}
										{% set var = false %}
									{% endif %}
								{% endfor %}
								{% if var %}
									<div class="w-full text-center bg-emerald-500 dark:bg-amber-200 dark:opacity-40 rounded items-center justify-center justify-items-center flex-colsrounded  border-dashed mt-3 " id="noPublication">
										<p class="w-full h-full px-5 pt-5 grid-rows-1 grid-cols-1 grid pb-5 items-center justify-items-center place-items-center font-medium leading-5">
											<span class="text-emerald-50 dark:text-amber-900 text-base  px-5 pt-5 grid-rows-2 grid-cols-1 grid pb-5 items-center justify-items-center place-items-center font-medium leading-5" href="{{path('app_publication_edit_chapter', {'idPub' : infoPub.id})}}#first" target="_top">
												<span class="">
													Vous venez de créer votre première feuille !
												</span>
												<span class="text-4xl">
													<span class="material-symbols-outlined">
														cheer
													</span>
												</span>
											</span>
										</p>
									</div>
									<div class="mt-5 flex-row space-y-2 items-baseline" id="noPublication2">
										<p class="text-xs  font-normal flex gap-x-2    text-slate-600 dark:text-slate-300">
											<span class="material-symbols-outlined text-amber-400 dark:text-amber-400">
												tips_and_updates
											</span>
											<span class="font-medium text-xs">
												Votre première feuille est dépubliée et se trouve dans la section ci-dessous.
											</span>
										</p>
										<p class="text-xs flex font-normal gap-x-2  text-slate-600 dark:text-slate-400">
											<span class="material-symbols-outlined items-center">
												open_with
											</span>
											Vous pouvez la publier en la glissant dans cet espace
										</p>
										<p class="text-xs flex font-normal gap-x-2  text-slate-600 dark:text-slate-400">
											<span class="material-symbols-outlined items-center">
												numbers
											</span>
											Vous pouvez également modifier l'ordre par lequel les feuilles publiées sont affichées. Cet ordre déterminera la façon dont vos lecteurs parcourront vos feuilles.
										</p>

									</div>
								{% endif %}
							{% endif %}
							{% include "publication/_partials/_edit_publication_show_chapters.html.twig" with {withStatus:2} %}
						</div>
					</div>
					<h2 id="accordion-flush-heading-2" class=" border-b-[1px] border-b-slate-200 shadow  px-5  rounded mt-5 dark:border-b-slate-900  dark:bg-slate-800   dark:bg-transparent dark:shadow-lg">
						<button type="button" class="flex items-center justify-between w-full py-5 font-medium text-left   dark:border-slate-700 dark:text-slate-400" data-accordion-target="#accordion-flush-body-2" aria-expanded="true" aria-controls="accordion-flush-body-2">
							<span class="opacity-80">
								<span class="material-symbols-outlined">
									visibility_off
								</span>
								Feuilles dépubliées, brouillons...</span>
							<svg data-accordion-icon class="w-6 h-6 shrink-0" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
							</svg>
						</button>
					</h2>
					<div id="accordion-flush-body-2" class="hidden" aria-labelledby="accordion-flush-heading-2">
						{% if infoPub.publicationChapters|filter(c => c.status == 1)|length == 0 %}
							{% set noChapUnpublished = true %}
						{% else %}
							{% set noChapUnpublished = false %}
						{% endif %}
						<div id="itemsChap2" class=" animate__animated flex-col  grid-cols-1 {{noChapUnpublished == false ? " md:grid-cols-2" : " md:grid-cols-1"}} grid gap-x-4 justify-center  opacity-100">
							{% include "publication/_partials/_edit_publication_show_chapters.html.twig" with {withStatus:1} %}
							{% if noChapUnpublished == true %}
								<div id="noChapUnpublished" class="rounded p-5 text-center border-dashed dark:border-2 dark:border-slate-800  mt-5 dark:opacity-100 opacity-50 dark:text-slate-600 text-slate-700">Aucune feuille dépubliée</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
			<div class="hidden p-4 rounded-lg  min-h-screen" id="statistiques" role="tabpanel" aria-labelledby="settings-tab">
				{% if infoPub.publicationPopularities|length > 0 %}
					<div id="legend-container" class="flex justify-evenly mb-5 text-xs"></div>
					<div class="w-full  rounded p-5 dark:bg-slate-900">
						<canvas id="chartStat" class="text-white"></canvas>
					</div>
					<hr class="mb-5">
					<h2 class="font-medium dark:text-slate-300 mb-5 mt-0 text-slate-700">
						<span class="material-symbols-outlined">
							insights
						</span>
						Évolution de la popularité de votre récit</h2>
					<div class="w-full  rounded p-5 dark:bg-slate-900">
						<canvas id="chartStat2" class="text-white"></canvas>
					</div>
				{% else %}
					<p class="text-center my-5 dark:text-slate-200">Aucune statistique à afficher pour le moment !</p>
				{% endif %}
			</div>
			<div class="hidden p-4 rounded-lg  min-h-screen" id="settings" role="tabpanel" aria-labelledby="settings-tab">
				<p class="text-sm text-gray-500 dark:text-gray-400">This is some placeholder content the
					<strong class="font-medium text-gray-800 dark:text-white">Settings tab's associated content</strong>. Clicking another tab will toggle the visibility of this one for the next. The tab JavaScript swaps classes to control the content visibility and styling.</p>
			</div>
		</div>
	</section>
	<aside class="col-span-12 mt-9 ml-5 lg:col-span-3 lg:mt-5 opacity-90  p-3 rounded">
		<hr class="w-full col-span-12 lg:hidden">
		<button type="button" class="button-classic button-green w-full mb-3" id="savePublication">
			{% if infoPub.status > 1 %}
				<span class="material-symbols-outlined">
					cloud_upload
				</span>
				&nbsp;Publier les modifications
			{% else %}
				<span class="material-symbols-outlined">
					save
				</span>
				&nbsp;Enregistrer
			{% endif %}
		</button>
		<div class="bg-slate-50 dark:bg-slate-900 py-3 mb-5 mt-3 rounded-lg">
			<div id="publishDiv" class="px-3 rounded-lg  w-full mb-3 mt-2 flex hover:opacity-100 hover:grayscale-0" for="publishToggle">
				<label class="relative inline-flex  mr-5 cursor-pointer" data-modal-target="popup-modal" data-modal-toggle="popup-modal">
					<input type="checkbox" id="publishButton" class="disabled sr-only peer" disabled {% if infoPub.status == 2 %} checked {% endif %}>
					<div id="publishToggle" class="w-11 h-6 rounded-full peer dark:bg-gray-700 peer-focus:ring-4 peer-focus:ring-green-300 dark:peer-focus:ring-green-800 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 "></div>
					<p class="ml-3 text-sm font-normal dark:text-gray-300" id="publishText">
						{% if infoPub.status > 1 %}Dépublier le récit{% else %}Publier le récit
						{% endif %}
					</p>
				</label>
			</div>
			<div class="px-3 rounded-lg  w-full relative mb-3 flex hover:opacity-100 hover:grayscale-0">
				<label class="relative inline-flex items-center">
					{% if infoPub.status < 2 %}
						<input type="checkbox" value="" class="sr-only peer" id="togglePubAS" checked/>
					{% else %}
						<input type="checkbox" value="" class="sr-only peer" id="togglePubAS" disabled/>
					{% endif %}
					<div class="w-11 h-6 bg-slate-200 cursor-pointer rounded-full peer peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:border-blue-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
					<span class="ml-3 text-sm {{ infoPub.status > 1 ? " text-slate-400 cursor-default" : " cursor-pointer" }}  dark:text-gray-300 disabled" id="ASText">Sauvegarde auto.</span>
				</label>
				<span class="absolute right-0 mr-5 cursor-default" id="ASTooltip">
					<span class="material-symbols-outlined opacity-30" data-tippy-content='<p class="text-center tippy-tt p-2"><strong><span class="material-symbols-outlined"> cloud_off </span><br>La sauvegarde automatique est désactivée car votre récit est publié.</strong><br><br>Si vous souhaitez enregistrer les modifications apportées à votre récit, veuillez cliquer sur le bouton ci-dessus, « Publier les modifications ».</p>'>
						info
					</span>
				</span>
			</div>
			<div class="px-3 rounded-lg  w-full mb-3 flex hover:opacity-100 hover:grayscale-0">
				<label class="relative inline-flex items-center">
					<input type="checkbox" value="" class="sr-only peer axiosPublication axiosPubAS axiosPubSpy" id="publication_finished" {{ infoPub.finished == 1 ? "checked" }}/>
					<div class="w-11 h-6 bg-blue-200 rounded-full peer peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:border-blue-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
					<span class="ml-3 text-sm dark:text-gray-300">Récit terminé&nbsp;&nbsp;
						<span data-tippy-content="<strong>Si vous cochez la case</strong>, cela signifie que votre récit est terminé et qu'il n'y aura plus de nouvelle feuille publiée.<br><br><strong>Si vous ne cochez pas la case</strong>, vos lecteurs pourront s'abonner à votre récit et recevront des notifications si de nouvelles feuilles sont publiées.">
							<span class="material-symbols-outlined">
								help
							</span>
						</span>
					</span>
				</label>
			</div>
		</div>
		<div class="p-4 rounded-lg bg-slate-50 dark:bg-slate-900 w-full  mb-4 text-slate-800 dark:text-slate-400">
			<p class="text-xs mb-1">
				<span class="material-symbols-outlined">
					history_toggle_off
				</span>
				&nbsp;Crée il y a
				<span class="font-medium">{{ infoPub.created|since }}</span>
			</p>
			<p class="text-xs mb-1">
				<span class="material-symbols-outlined">
					update
				</span>
				&nbsp;Modifié il y a
				<span class="font-medium">{{ infoPub.updated|since }}</span>
			</p>
			<p id="publishDateText" class="text-xs mb-1">
				<span class="material-symbols-outlined">
					cloud_upload
				</span>
				&nbsp;Publié il y a
				<span class="font-medium" id="publishDateTextSpan">
					{% if infoPub.publishedDate %}
						{{ infoPub.publishedDate|since }}
					{% endif %}
				</span>
			</p>
		</div>
		<div class="p-4 rounded-lg bg-slate-50 dark:bg-slate-900 w-full  mb-4 text-slate-800 dark:text-slate-400">
			<p class=" text-sm mb-1 font-medium">

				{% set slug = "recit-sans-titre" %}
				{% if infoPub.slug %}
					{% set slug = infoPub.slug %}

				{% endif %}
				{% if infoPub.status < 2 %}
					<span class="material-symbols-outlined">
						preview
					</span>
					<a href="{{ path("app_publication_show_one", {id:infoPub.id, slug:slug}) }}" class=" hover:underline" target="_blank">Voir un aperçu du récit</a>
				{% else %}
					<span class="material-symbols-outlined">
						eyeglasses
					</span>
					<a href="{{ path("app_publication_show_one", {id:infoPub.id, slug:slug}) }}" class=" hover:underline" target="_blank">Voir le récit sur le site</a>
				{% endif %}
			</p>
		</div>
		<div id="task" class="p-4 rounded-lg bg-yellow-50 text-yellow-800 dark:bg-slate-900 w-full  mb-4  dark:text-slate-400">
			<p class="text-sm mb-1 font-semibold">
				Vous devriez :
				<ul class="text-xs mt-2">

					<li class="flex gap-x-2 animate__animated {{infoPub.category ? " hidden" : " " }}" id="taskCategory">
						<span class="material-symbols-outlined">
							category
						</span>
						<span>Choisir une catégorie dans la section «
							<button onclick="var pcd = document.getElementById('publication_category_div').classList; document.getElementById('profile-tab').click();pcd.add('animate__animated','animate__flash');setTimeout(function() {pcd.remove('animate__animated','animate__flash')},2000)" class="hover:underline font-medium" type="button">Informations</button>
							»
						</span>
					</li>

					<li class="mt-3 flex  gap-x-2 animate__animated  {{infoPub.publicationChapters|filter(c => c.status == 2)|length > 0 ? " hidden" : " " }}" id="taskPublish">
						<span class="material-symbols-outlined">
							visibility
						</span>
						Publier au moins une feuille
					</li>
					<li><hr class="mb-2 mt-2 border-yellow-400 bg-yellow-400 opacity-30"></li>
					<li class="mt-3 flex opacity-50 text-[0.75rem]  gap-x-2 animate__animated">
						<span class="material-symbols-outlined">
							info
						</span>
						Réalisez ces tâches afin que votre récit soit visible par les autres utilisateurs lors de sa publication. Autrement, il ne se sera consultable que par accès direct (lien).
					</li>

				</ul>
			</p>
		</div>
	</aside>
	<div>
		<dialog id="popup-modal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full">
			<div class="relative h-full max-w-[30rem] md:h-auto">
				<div class="relative bg-red rounded-lg shadow-lg dark:bg-gray-700 top-1/3">
					<button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white" data-modal-hide="popup-modal">
						<svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
						<span class="sr-only">Close modal</span>
					</button>
					<div class="p-6 text-center w-42 bg-white dark:bg-slate-900 rounded-2xl">
						<svg aria-hidden="true" class="mx-auto mb-4 text-gray-400 w-14 h-14 dark:text-gray-200" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						<h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400" id="PublicationPublishModalText">
							Êtes-vous certain(e) de vouloir publier votre récit ?
						</h3>
						{% if infoPub.category == null or infoPub.publicationChapters|filter(c => c.status == 2)|length == 0 %}
							{% set classHidden = "hidden" %}
						{% else %}
							{% set classHidden = "false" %}
						{% endif %}

						{# TODO: modifier le "certaine" en fonction du genre de l'utilisateur #}
						<button data-modal-hide="popup-modal" id="PublicationPublishButton" type="button" class="text-white focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2">
							Oui, je suis certain(e)
						</button>
						<button data-modal-hide="popup-modal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Non, j'annule</button>
					</div>
				</div>
			</div>
		</dialog>
	</div>

	<input type="hidden" value="{{ infoPub.id }}" id="hideIdPub"/>
	<input type="hidden" id="hidePubStatus" value="{{ infoPub.status }}" id="hideId"/>
{% endblock %}
