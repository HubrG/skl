	<div class="absolute bg-white dark:bg-slate-800 w-full min-h-[100%] left-0 right-0 -z-10  ">&nbsp;</div>
	<div class="w-full bg-transparent">
		{% if app.user and app.user.id == userInfo.id %}
			<ul class="flex-row absolute justify-center items-center left-0 flex w-full ">
				<li class="li-user-menu">
					<a href="{{ path("app_user", { username : app.user.username}) }}" data-turbo-frame="_self" class="item-user-menu {{ app.request.attributes.get('_route') == 'app_user' or app.request.attributes.get('_route') == 'app_user_edit' ? " item-user-menu-selected"}}">
