{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}
{% block body %}
	<style>
		#section_profil
		{
			position: inherit;
			z-index: 1;
		}
		#section_profil::before
		{
			content: "";
			position: absolute;
			display: inline;
			top: 0;
			left: 0;
			right: 0;
			width: 100%;
			min-height: 30vh;
			height: 36vh;
			opacity: 0.1;
			z-index: -99999999999;
			background-position: center;
			background-image: url('{{userInfo.profilBackground}}');

		}
	</style>
	<!-- TODO: créer un extends de User dans Edit (au cas ou on voudrait arriver directement sur la page de modification) -->
	<section class="col-span-12 pt-10  before:bg-cover before:-z-[9999] before:border-b-[1px] before:border-b-black" id="section_profil">
		<turbo-frame id="profil_up">
			<div class="grid grid-cols-3  relative mb-10">

				<div class="flex justify-center order-first md:order-first text-2xl mt-20 md:mt-0 gap-x-5">
					{% if userInfo.website %}
						<a href="{{userInfo.website}}" target="_blank">
							<svg data-tippy-content="Visiter le site web de {{userInfo.nickname}}" class="w-6 h-6 fill-slate-800" fill="currentColor" viewbox="0 0 24 24" aria-hidden="true">
