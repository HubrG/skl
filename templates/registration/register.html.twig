{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<section class="col-span-6  col-start-4">
		<h1 class="text-center">Rejoignez-nous !</h1>
		{{ form_start(registrationForm, {attr: {'novalidate': 'novalidate'}}) }}
		{{ form_label(registrationForm.username) }}
		{{ form_errors(registrationForm.username) }}
		<div class="flex">
			<span class="form-icon">
				<i class="fa-solid fa-at"></i>
			</span>
			{{ form_widget(registrationForm.username, { attr: {'class':'icon-desc'}}) }}
		</div>
		{{ form_help(registrationForm.username) }}

		{{ form_label(registrationForm.email) }}
		{{ form_errors(registrationForm.email) }}
		<div class="flex">
			<span class="form-icon">
				<i class="fa-regular fa-envelope"></i>
			</span>
			{{ form_widget(registrationForm.email, { attr: {'class':'icon-desc'}}) }}
		</div>
		{{ form_label(registrationForm.plainPassword) }}
		{{ form_errors(registrationForm.plainPassword) }}
		<div class="flex">
			<span class="form-icon">
				<i class="fa-solid fa-unlock-keyhole"></i>
			</span>
			{{ form_widget(registrationForm.plainPassword, { attr: {'class':'icon-desc'}}) }}
		</div>

		<label for="registration_form_agreeTerms">
			<span class="ml-30 cursor-pointer">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;J'accepte les CGU</span>
		</label>
		<div class="-mt-8">{{ form_widget(registrationForm.agreeTerms) }}</div>
		<ul class="-mt-5">
			<li class="form-error">{{ form_errors(registrationForm.agreeTerms) }}</li>
		</ul>
		<button type=" submit" class=" btn">C'est parti !</button>
		{{ form_end(registrationForm) }}
	</section>

{% endblock %}
